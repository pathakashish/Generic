<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/title_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title_bar_bg"
        android:padding="@dimen/padding_general_small"
        android:text="@android:string/untitled"
        android:textColor="@color/white_textcolor_statelist"
        android:textSize="@dimen/text_size_large"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_general"
        android:background="@drawable/listview_bg"
        android:padding="@dimen/padding_general_large" >

        <TextView
            android:id="@+id/message_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@android:string/VideoView_error_text_invalid_progressive_playback"
            android:textColor="@color/gray_text_color" />
    </ScrollView>

    <LinearLayout
        android:id="@+id/controls_pane"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_marginBottom="@dimen/margin_general"
        android:layout_marginLeft="@dimen/margin_general"
        android:layout_marginRight="@dimen/margin_general"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/positive_button"
            android:layout_width="0dip"
            android:layout_height="@dimen/button_height"
            android:layout_weight="1"
            android:text="@android:string/yes" />

        <Button
            android:id="@+id/neutral_button"
            android:layout_width="0dip"
            android:layout_height="@dimen/button_height"
            android:layout_marginLeft="@dimen/margin_general"
            android:layout_marginRight="@dimen/margin_general"
            android:layout_weight="1"
            android:text="@android:string/ok" />

        <Button
            android:id="@+id/negative_button"
            android:layout_width="0dip"
            android:layout_height="@dimen/button_height"
            android:layout_weight="1"
            android:text="@android:string/no" />
    </LinearLayout>

</LinearLayout>